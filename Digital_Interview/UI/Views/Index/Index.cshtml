@model DataModelCommon.Dashboard
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Welcome @Model.FirstName @Model.LastName</h2>


<div class="btn-box-row row-fluid">
    <div class="span12">
        <div class="row-fluid">
            <div class="span12">
                <a>
                    <i class="icon-envelope"></i><b>@Html.ActionLink("Subcriptions - " + @Model.Subscriptions, "Index", "Subcriptions", new {@class = "btn-box small span6"})</b>                   
                </a>                
                <a>
                    <i class="icon-group"></i><b>@Html.ActionLink("Users - "+@Model.Users, "Index", "Users", new {@class = "btn-box small span6"})</b>
                    
                </a>
            </div>
        </div>
    </div>
</div>
<div class="btn-box-row row-fluid">
    <div class="span12">
        <div class="row-fluid">
            <div class="span12">
                <a>
                    <i class="icon-envelope"></i><b>@Html.ActionLink("Resources - "+@Model.Resources, "Index", "Subcriptions", new {@class = "btn-box small span6"})</b>
                    
                </a>
                <a>
                    <i class="icon-group"></i><b>@Html.ActionLink("Vouchers - "+ @Model.Vouchers, "Index", "Users", new {@class = "btn-box small span6"})</b>
                    
                </a>
            </div>
        </div>
    </div>
</div>

